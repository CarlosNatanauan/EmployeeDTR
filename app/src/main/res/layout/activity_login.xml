<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/bg_loginfinalnatalaga"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <ir.waspar.persianedittext.PersianEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="290dp"
            app:edtgravity="left"
            app:edtInputType="text"
            app:imageSrc="@drawable/ic_profilewhite3"
            app:setHint="Username"
            app:setImageBackground="#1F2731"
            app:strokeColor="@color/black"
            app:strokeRadius="3dp"
            app:maxLenght="50"
            app:strokeSize="1dp"
            app:textColor="#1F2731"
            app:textSize="8sp"
            android:paddingBottom="20dp"/>

        <ir.waspar.persianedittext.PersianEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:edtgravity="left"
            app:edtInputType="password"
            app:imageSrc="@drawable/ic_password"
            app:setHint="Password"
            app:setImageBackground="#1F2731"
            app:strokeColor="@color/black"
            app:strokeRadius="3dp"
            app:maxLenght="50"
            app:strokeSize="1dp"
            app:textColor="#1F2731"
            app:textSize="8sp"
            android:paddingBottom="10dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:layout_gravity="left">

            <CheckBox
                android:id="@+id/checkBoxKeepMeLoggedIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keep me logged in"
                android:layout_marginLeft="13dp"
                android:thumbTint="@color/checkbox"
                android:trackTint="@color/checkbox"
                />

            <TextView
                android:id="@+id/textViewForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:layout_marginStart="10dp"
                android:textColor="#1F2731"
                android:textSize="16sp" />

        </LinearLayout>


        <com.example.myloadingbutton.MyLoadingButton
            android:id="@+id/my_loading_button_login"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:mlb_labelSize="5sp"
            app:mlb_label="Login"
            app:mlb_backgroundColor="#1F2731"
            app:mlb_labelColor="@color/white"
            app:mlb_setNormalAfterError="false"
            />

        <com.example.myloadingbutton.MyLoadingButton
            android:id="@+id/my_loading_button_fingerprint"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:mlb_labelSize="5sp"
            app:mlb_label="Biometrics"
            app:mlb_backgroundColor="#1F2731"
            app:mlb_labelColor="@color/white"
            app:mlb_setNormalAfterError="false"
            />

    </LinearLayout>
</FrameLayout>
