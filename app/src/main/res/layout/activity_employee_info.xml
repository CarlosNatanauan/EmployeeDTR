<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:PersianEditText="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f9fe"
    tools:context=".manageAdd"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#4A4A4A"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layoutforprofile"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/profilepic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"

                    >

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMPLOYEE INFORMATION"
                        android:textColor="#1F2731"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutforprofile"
                android:orientation="vertical"
                android:padding="16dp"
                >

                <!-- start -->
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="       Employee ID:"
                    app:textSize="8sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"

                    />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee Name:"
                    app:textSize="8sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="              Address:"
                    app:textSize="8sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Email Address:"
                    app:textSize="8sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="         Contact No:"
                    app:textSize="8sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="       Basic Salary:"
                    app:textSize="8sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="               Time IN:"
                    app:textSize="8sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="           Time OUT:"
                    app:textSize="8sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Employee Role:"
                    app:textSize="8sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="           OT Entitle:"
                    app:textSize="8sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutforprofile"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginStart="110dp"
                >

                <!-- start -->
                <TextView
                    android:id="@+id/infoID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee ID:"
                    app:textSize="8sp"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/infoEmpName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee Name:"
                    app:textSize="8sp"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/infoAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    app:textSize="8sp"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/infoEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address:"
                    app:textSize="8sp"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/infoContactNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Number:"
                    app:textSize="8sp"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/infoBasicSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Salary:"
                    app:textSize="8sp"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/infoTimeIN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time IN:"
                    app:textSize="8sp"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/infoTimeOUT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time OUT:"
                    app:textSize="8sp"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/infoEmpRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee Role:"
                    app:textSize="8sp"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/infoOT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OT Entitle:"
                    app:textSize="8sp"
                    android:paddingLeft="20dp"
                    />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/line2"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_centerVertical="true"

                >


                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMPLOYEE QR CODE"
                    android:layout_gravity="center"
                    android:textColor="#1F2731"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />

                    <ImageView
                        android:id="@+id/qrInfo"
                        android:layout_width="360dp"
                        android:layout_height="310dp"
                        android:src="@drawable/add"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        />
                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show this QR code for TIME IN/ TIME OUT"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>